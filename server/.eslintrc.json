{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules":
  {
    "prefer-destructuring": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js","*.spec.js"],
      "rules": {
        "func-names": "off",
        "prefer-destructuring": "off"
      }
    }
  ]
}